body{font-family:sans-serif !important} .h16{font-family:sans-serif !important}body {background: #ffffff;}
img {max-width: 100%}

p {margin: 1.2em 0;}
.wechat_body .header_block_p:first-child{margin-top: -1.2em; padding-top: 0.2em}

span.md_line, body {line-height: 1.7}
body, .wechat_body, span.md_line{color:#333333; font-size:17px; letter-spacing:1.5px}
.codehilite{letter-spacing: 0; line-height:1.8;} .codehilite pre{line-height: 1.8; white-space: pre; }
b,strong{color:#cb001e}
hr {border-bottom-color: #dddddd}
body, .wechat_body, span.md_line{text-align:justify}
span.next_img_before.next_only_img_before.next_md_line_end{margin-top:30px;}
span.img_before.only_img_before.md_line_end{font-size:80%;  color:#777777; text-align:center; margin-top: -5px !important; margin-bottom:30px}
pre {white-space: pre-wrap;}

.wechat_body {padding: 0px 10px 0px 10px;}

.h16 { font-weight: bold; line-height: 1.2; color:#111111 !important;}
h1, h2 {font-size: 24px}
h3 {font-size: 21px; margin-left: 3px;}
h4, h5, h6 {font-size: 19px; margin-left: 5px;}
    .h16{border-bottom: 1px solid #eeeeee}
h1, h2 {margin-bottom: 1.25em;} h3 {margin-bottom:0.6em}
.h16{padding:15px 0px 5px 0px}

.md_block_section_for_ul, .md_block_section_for_ol{color:#2b5db9; line-height:1.6; padding: 0 !important} /*patch for wechat*/
ol, ul {color:#2b5db9}
li span {color:#555555; padding-top:3px; padding-bottom:3px; display:block}
ul li {list-style:disc}
.toc li span{display: inline}
    
blockquote {
    margin: 1.6em 0;
    padding: 0.25em 0 0.25em 1.2em;
    border-left: 5px solid #16b0ff;
    color: #353535;
    min-height:15px;
    background: #f5f5f5;
}